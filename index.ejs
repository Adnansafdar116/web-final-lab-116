<!DOCTYPE html>
<html>
<head>
  <title>Records</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Records</h1>
  
  <ul>
    <% records.forEach(record => { %>
      <li>
        <span><%= record.name %></span>
        <form method="post" action="/delete/<%= record._id %>">
          <button type="submit">Delete</button>
        </form>
      </li>
    <% }) %>
  </ul>

  <a href="/new">Add New</a>
</body>
</html>
